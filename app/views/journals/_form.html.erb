<%= form_for @journal do |f| %>
    <%= f.hidden_field :horoscope_id %>
    <%= f.select :horoscope_id, option_groups_from_collection_for_select(Month.all, :horoscopes, :name, :id, :sign), :include_blank => "Please select..." %><br><br>

    <%= f.label :title, 'Sun or Ascendant?' %><br>
    <%= f.text_field :title %><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br><br>
    <%= f.label :mood %><br>
    <%= f.text_field :mood %><br><br>

    <%= f.submit %>
<% end %>  